{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_tag_new' %}

{% block main %}
    <h1>{{ 'title.tag_edit'|trans }}</h1>

    {{ form_start(edit_form) }}
        {{ form_row(edit_form.name) }}



        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.edit_tag'|trans }}
        </button>

        <a href="{{ path('tag') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_tag'|trans }}
        </a>
    {{ form_end(edit_form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
